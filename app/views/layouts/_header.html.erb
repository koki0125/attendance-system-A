<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "勤怠システム", root_path, id: "logo" %>
    <nav>
      <ul id="navnav" class="nav navbar-nav navbar-right">
        <% if logged_in? %>
          <li><%= link_to "トップへ", root_path %></li>
          <% if current_user.admin? %>
            <li><%= link_to "社員一覧", users_path %></li>
            <li><%= link_to "出勤中社員一覧", working_employees_index_path %></li>
            <li><%= link_to "拠点情報の修正", base_edit_path %></li>
            <% if @user.presence %>
              <li><%= link_to "基本情報の修正", basic_info_path(@user) %></li>
            <% end %>
          <% end %>
          <li class="dropdown">
            <a href="#" id="dropdown_ac" class="dropdown-toggle" data-toggle="dropdown">
              アカウント <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "プロフィール編集", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "ログアウト", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "トップへ", root_path %></li>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>